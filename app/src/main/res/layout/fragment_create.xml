<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              android:padding="15dp"
    >

    <EditText
        style="@style/login_input_style"
        android:hint="@string/voice_chatroom_id"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
        android:text="@string/room_number_must_consist_of_8_digit_letters_and_numbers"
        android:textColor="@color/text_color_gray"
        android:textSize="12sp"
        />

    <EditText
        style="@style/login_input_style"
        android:hint="@string/password"
        android:inputType="textPassword"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
        android:text="@string/password_should_not_exceed_16_bits_at_most"
        android:textColor="@color/text_color_gray"
        android:textSize="12sp"
        />

    <Button
        style="@style/login_button_style"
        android:layout_marginTop="20dp"
        android:text="@string/submit"
        />
</LinearLayout>